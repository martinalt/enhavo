<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <title>{% block title %}enhavo{% endblock %}</title>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <meta name="robots" content="noindex, nofollow">

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('build/enhavo/app.css') }}">

    <script id="data" type="application/json">{{ data|json_encode|raw }}</script>

    {% block stylesheets %}
        {{ encore_entry_link_tags('enhavo/app') }}
    {% endblock %}
</head>

<body>
    <div id="app"></div>
</body>

{% block javascripts %}
    {{ encore_entry_script_tags('enhavo/app') }}
{% endblock %}
</html>